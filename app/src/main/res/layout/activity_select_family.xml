<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectFamilyActivity">

    <LinearLayout
        android:id="@+id/addLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/familyListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/onglyp"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:text="가족 목록" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/familyCodeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/random_question_border" />

        <ImageButton
            android:id="@+id/familyAdd_Btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_add"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/familyAddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/onglyp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="가족 추가하기" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>