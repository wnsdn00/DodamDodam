<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmSettingsActivity">

    <Switch
        android:id="@+id/buttonAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 받기"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/missionAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미션 알림 받기"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/buttonAlarm"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/questionAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 질문 알림 받기"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/missionAlarm"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>