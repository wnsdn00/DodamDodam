<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF3F8"
    tools:context=".SearchFragment">

    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#EAF3F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#EAF3F8"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/ic_back"
            android:contentDescription="@string/back_button"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/addPost"
            android:src="@drawable/ic_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#EAF3F8"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/add_button"
            android:onClick="onAddPostButtonClick"/>

        <ImageButton
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#EAF3F8"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/search"
            android:contentDescription="@string/search_button"
            android:onClick="onSearchButtonClick"/>

        <ImageButton
            android:id="@+id/gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#EAF3F8"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/gallery"
            android:contentDescription="@string/gallery_button"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/search_border"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/user_search"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:hint="작성자"
            android:gravity="center"
            android:background="@drawable/search_border"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:imeOptions="actionSearch"
            android:inputType="text"/>

        <ImageButton
            android:id="@+id/user_search_button"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:contentDescription="검색"
            android:onClick="onUserSearchButtonClick"/>

        <EditText
            android:id="@+id/date_search"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:hint="작성 날짜"
            android:gravity="center"
            android:background="@drawable/search_border"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/date_search_button"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:contentDescription="검색"
            android:onClick="onDateSearchButtonClick"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:background="#EAF3F8"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>