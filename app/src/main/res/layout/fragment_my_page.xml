<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageFragment">

    <!-- 상단: 가족 등록증 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/family_card"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_margin="60dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/family_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아들"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/profile_image"
                android:src="@drawable/ic_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="30dp"
                android:contentDescription="Profile Image"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingBottom="8dp"
                android:text="가족 등록증"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="3dp"/>
            <TextView
                android:id="@+id/user_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="3dp"/>
            <TextView
                android:id="@+id/family_card_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**네 가족 >"
                android:layout_margin="3dp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족코드"
                android:layout_marginLeft="5dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024.07.30"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 선: family_card 아래 -->
    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_margin="15dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/family_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 중간: 상점과 꾸미기 버튼 -->
    <LinearLayout
        android:id="@+id/middle_section"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/family_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_store"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="상점"
            android:background="@drawable/store5"
            android:scaleType="fitCenter"/>

        <!-- 세로 선: 상점, 꾸미기 사이에 추가 -->
        <View
            android:id="@+id/vertical_divider"
            android:layout_width="2dp"
            android:layout_height="170dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/btn_store"
            app:layout_constraintEnd_toEndOf="@id/btn_customize"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_customize"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="꾸미기"/>
    </LinearLayout>

    <!-- 선: middle_section 아래 -->
    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_margin="2dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/middle_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단: 고객센터, 앱 정보, 환경설정 -->
    <LinearLayout
        android:id="@+id/lower_section"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="56dp"
        app:layout_constraintTop_toBottomOf="@id/middle_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_customer_service"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="    •  고객센터"
            android:gravity=""
            android:background="@android:color/transparent" />
        <Button
            android:id="@+id/btn_app_info"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="    •  앱 정보"
            android:gravity=""
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/buttonPreference"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="    •  환경설정"
            android:gravity=""
            android:background="@android:color/transparent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>